<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="camelContext-mowerLogger" xmlns="http://camel.apache.org/schema/spring">
        <route id="logMower-Cron" streamCache="true">
            <from  uri="timer:timerName?period=60s"/>
            <to uri="direct-vm:logMower"/>
        </route>
        <route id="logMower" streamCache="true">
            <from  uri="direct-vm:logMower"/>
            <setHeader headerName="CamelHttpMethod">
       			 <constant>GET</constant>
    		</setHeader>
    		<setHeader headerName="Authorization">
       			 <constant>Bearer ae67770e-d260-4419-80ad-7b05b39dd875</constant>
    		</setHeader>
    		<setHeader headerName="Authorization-Provider">
       			 <constant>husqvarna</constant>
    		</setHeader>
            <to uri="https4://amc-api.dss.husqvarnagroup.net/v1/mowers/164604652-164710835/"/>
 			<to	 uri="direct-vm:logMowerToDB"/>         
        </route>
    </camelContext>
</beans>
